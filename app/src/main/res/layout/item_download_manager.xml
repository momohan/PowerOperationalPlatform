<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/icon"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:padding="5dp"
        android:scaleType="centerCrop"
        android:src="@mipmap/ic_launcher" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:text="文件名称"
            android:textColor="#000"
            android:textSize="16sp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp">

            <TextView
                android:id="@+id/downloadSize"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:text="--M/--M"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/netSpeed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
                android:text="---K/s"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/tvProgress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/netSpeed"
                android:text="--.--%"
                android:textSize="10sp" />

        </RelativeLayout>

        <com.handu.lp.ui.NumberProgressBar
            android:id="@+id/pbProgress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/targetFolder"
            android:layout_marginTop="2dp"
            app:progress_reached_bar_height="1.5dp"
            app:progress_reached_color="#3498DB"
            app:progress_text_color="@color/red_light"
            app:progress_text_size="@dimen/system_default_size"
            app:progress_unreached_bar_height="0.75dp"
            app:progress_unreached_color="@color/gray_light" />

    </LinearLayout>

    <Button
        android:id="@+id/start"
        android:layout_width="48dp"
        android:layout_height="wrap_content"
        android:background="@color/gray_light"
        android:text="下载"
        android:textColor="#FFF" />

    <Button
        android:id="@+id/remove"
        android:layout_width="48dp"
        android:layout_height="wrap_content"
        android:background="@color/red_light"
        android:text="删除"
        android:textColor="#FFF" />

    <Button
        android:id="@+id/restart"
        android:layout_width="48dp"
        android:layout_height="wrap_content"
        android:background="@color/blue_light"
        android:text="重新\n下载"
        android:textColor="#FFF" />
</LinearLayout>