<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/MatchMatch.Vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:text="@string/handle_detail_locale_affirm"
        android:textColor="@color/black"
        android:textSize="@dimen/system_title_size" />

    <LinearLayout
        style="@style/MatchWrap.Vertical"
        android:layout_margin="5dp"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <TextView
            android:layout_width="@dimen/system_list_item_title"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:text="@string/work_order_trouble_genre"
            android:textColor="@color/black"
            android:textSize="@dimen/system_default_size" />

        <com.jaredrummler.materialspinner.MaterialSpinner
            android:id="@+id/sp_work_trouble_genre"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="5dp"
            app:ms_arrow_tint="@color/white"
            app:ms_background_color="@color/colorPrimary"
            app:ms_text_color="@color/white" />

    </LinearLayout>

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical|start"
        android:layout_marginTop="5dp"
        android:background="@android:drawable/editbox_background"
        android:hint="@string/work_order_xz_ry_add"
        android:textColorHint="@color/black">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/et_xz_ry"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="5dp"
            android:background="@null"
            android:clickable="true"
            android:focusable="false"
            android:gravity="center_vertical"
            android:minHeight="48dp"
            android:textColor="@color/black"
            android:textSize="@dimen/system_default_size" />

    </android.support.design.widget.TextInputLayout>

</LinearLayout>