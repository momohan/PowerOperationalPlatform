<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_margin="5dp"
    android:clickable="true"
    android:foreground="?android:attr/selectableItemBackground"
    app:cardBackgroundColor="@android:color/white"
    app:cardCornerRadius="5dp"
    app:cardElevation="10dp"
    app:contentPadding="5dip">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="@dimen/system_list_item_title"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:text="@string/work_order_priority"
                    android:textColor="@color/black"
                    android:textSize="@dimen/system_default_size" />

                <TextView
                    android:id="@+id/tv_work_priority"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:gravity="center_vertical"
                    android:maxLines="1"
                    android:textColor="@color/black"
                    android:textSize="@dimen/system_default_size" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="@dimen/system_list_item_title"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:text="@string/work_order_client_name"
                    android:textColor="@color/black"
                    android:textSize="@dimen/system_default_size" />

                <TextView
                    android:id="@+id/tv_work_client_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:gravity="center_vertical"
                    android:maxLines="1"
                    android:textColor="@color/black"
                    android:textSize="@dimen/system_default_size" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="@dimen/system_list_item_title"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:text="@string/work_order_num"
                    android:textColor="@color/black"
                    android:textSize="@dimen/system_default_size" />

                <TextView
                    android:id="@+id/tv_work_num"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:gravity="center_vertical"
                    android:maxLines="1"
                    android:textColor="@color/black"
                    android:textSize="@dimen/system_default_size" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="@dimen/system_list_item_title"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:text="@string/work_order_type"
                    android:textColor="@color/black"
                    android:textSize="@dimen/system_default_size" />

                <TextView
                    android:id="@+id/tv_work_type"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:gravity="center_vertical"
                    android:maxLines="1"
                    android:textColor="@color/black"
                    android:textSize="@dimen/system_default_size" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="@dimen/system_list_item_title"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:text="@string/work_order_fz_ry"
                    android:textColor="@color/black"
                    android:textSize="@dimen/system_default_size" />

                <TextView
                    android:id="@+id/tv_work_fzr"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:gravity="center_vertical"
                    android:maxLines="1"
                    android:textColor="@color/black"
                    android:textSize="@dimen/system_default_size" />
            </LinearLayout>

            <!--<LinearLayout-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_margin="5dp"-->
            <!--android:gravity="center_vertical"-->
            <!--android:orientation="horizontal">-->

            <!--<TextView-->
            <!--android:layout_width="@dimen/system_list_item_title"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:gravity="center_vertical"-->
            <!--android:text="@string/work_order_state"-->
            <!--android:textColor="@color/black"-->
            <!--android:textSize="@dimen/system_default_size" />-->

            <!--<TextView-->
            <!--android:id="@+id/tv_work_state"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_marginStart="5dp"-->
            <!--android:gravity="center_vertical"-->
            <!--android:maxLines="1"-->
            <!--android:textColor="@color/red_light"-->
            <!--android:textSize="@dimen/system_default_size" />-->

            <!--</LinearLayout>-->

        </LinearLayout>

        <com.haozhang.lib.SlantedTextView
            android:id="@+id/tv_position"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_gravity="bottom|end"
            android:gravity="center"
            app:slantedBackgroundColor="@color/colorPrimary"
            app:slantedLength="40dp"
            app:slantedMode="right_bottom"
            app:slantedText="1"
            app:slantedTextColor="@color/white"
            app:slantedTextSize="@dimen/system_size_12" />

    </FrameLayout>

</android.support.v7.widget.CardView>