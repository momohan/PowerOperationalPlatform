<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:cube_ptr="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_search"
    style="@style/MatchMatch"
    android:background="@color/white"
    tools:context="com.handu.poweroperational.main.activity.SearchActivity">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/appbar"
        style="@style/MatchWrap"
        android:orientation="vertical"
        app:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:layout_scrollFlags="scroll|enterAlways"
            app:popupTheme="@style/AppTheme.PopupOverlay" />

    </android.support.design.widget.AppBarLayout>


    <LinearLayout
        style="@style/MatchWrap.Vertical"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <SearchView
            android:id="@+id/searchView"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@color/gray_light"
            android:iconifiedByDefault="false"
            android:padding="5dp"
            android:queryBackground="@color/white"
            android:queryHint="@string/hint_search_content"
            android:submitBackground="@color/white"
            app:layout_scrollFlags="scroll|enterAlways" />

        <com.chanven.lib.cptr.PtrClassicFrameLayout
            android:id="@+id/refreshLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            cube_ptr:ptr_keep_header_when_refresh="true"
            cube_ptr:ptr_ratio_of_header_height_to_refresh="1.2"
            cube_ptr:ptr_resistance="1.7">

            <android.support.v7.widget.RecyclerView
                android:id="@+id/recyclerView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_above="@+id/bt_exit_login"
                android:layout_below="@+id/ll_top" />

        </com.chanven.lib.cptr.PtrClassicFrameLayout>
    </LinearLayout>


    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab_go_top"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end|bottom"
        android:layout_margin="@dimen/fab_margin"
        android:src="@drawable/ic_vector_go_top"
        android:visibility="gone"
        app:backgroundTint="@color/colorPrimary"
        app:elevation="10dp"
        app:fabSize="mini"
        app:layout_behavior="@string/scale_up_show_behavior"
        app:layout_scrollFlags="scroll|enterAlways|snap"
        app:pressedTranslationZ="10dp"
        app:rippleColor="@color/gray_dark" />

</android.support.design.widget.CoordinatorLayout>
